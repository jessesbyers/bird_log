<!doctype html>
<html lang="en">
<head>
  <title>Bird Log</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css?family=EB+Garamond&display=swap" rel="stylesheet">
  <style>
    header .wrapper {
      display: grid;
      grid-template-columns: 3fr 1fr 1fr 1fr 1fr 1fr;
      grid-gap: 1em;
      /*background-color: #BC986A;*/
      background-color: #659DBD;

      border-radius: 12px;
      align-items: center;
      width: 100%;
      /*height: 50px;*/
    }

    div {
      text-align: center;
    }

    header h1 {
      font-size: 100px;
      color: #FBEEC1;
    }

    header button {
      background-color: #FBEEC1;
      width: 100%;
      border-radius: 12px;
    }

    body {
      background-color: #659DBD;
    }

    div {
      /*margin: 1em;
      padding: 1em;*/
      border-radius: 12px;
    }

    footer {
      text-align: right;
      background-color: yellow;
      /*padding: 1em;
      margin: 1em;*/
      border-radius: 12px;
      /*background-color: #BC986A;*/
      background-color: #659DBD;


    }

    h1, h2, h3, h4, h5, p {
      font-family: 'EB Garamond', serif;
    }
  </style>
</head>

<body>

<header>
  <div class="wrapper">
    <h1>Bird Log</h1>

      <% if Helpers.logged_in?(session) %>

      <div>
        <form action="/users" >
           <button class="large" type="submit">Home</button>
        </form>
      </div>

      <div>
        <form action="/birds" >
           <button class="large" type="submit">Birds</button>
        </form>
      </div>

        <div>
          <form action="/sightings" >
             <button class="large" type="submit">All Sightings</button>
          </form>
        </div>

        <div>
          <form action="/sightings/new" >
             <button class="large" type="submit">New Sighting</button>
          </form>
        </div>

        <div>
          <form action="/logout" >
             <button class="large" type="submit">Logout <%=Helpers.current_user(session).username%></button>
          </form>
        </div>

        <% else %>
          <div class="center">
            <form action="/signup" >
               <button class="large" type="submit">New Users: Create an Account</button>
            </form>
          </div>

          <div>
            <form action="/login" >
               <button class= "large" type="submit">Current Users: Log In</button>
            </form>
          </div>
      <% end %>
    </div>

  </header>

  <%= yield %>

  <footer>
    <p>add footer content here</p>
  </footer>

</body>
</html>
